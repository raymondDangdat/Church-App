<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comq.example.raymond.Activities.EditChurchHistory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/app_bar_layout"
            android:id="@+id/edit_church_history_toolbar"
            >
        </include>
        <TextView
            android:id="@+id/txt_date_updated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Updated"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:fontFamily="cursive"
            android:textColor="@color/colorPrimary"/>
        <EditText
            android:id="@+id/editText_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Church History Will Be Loaded Here From The Database"
            android:inputType="textMultiLine"
            android:textSize="20sp"
            android:padding="8dp"
            />
        <Button
            android:id="@+id/btn_update_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Update"
            android:textColor="@android:color/white"
            android:textStyle="italic"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:padding="8dp"
            android:background="@drawable/rounded_button"/>
    </LinearLayout>

</ScrollView>
